<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="6dip" />
            <stroke android:width="1dip" android:color="#bb86fc" />
            <gradient android:angle="-90" android:startColor="#3700B3" android:endColor="#62008e"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="6dip" />
            <stroke android:width="1dip" android:color="#bb86fc" />
            <solid android:color="#3700B3"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#3700B3" />
            <gradient android:angle="-90" android:startColor="#bb86fc" android:endColor="#62008e" />
        </shape>
    </item>
</selector>