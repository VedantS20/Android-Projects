<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/scrollView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="match_parent"
            android:layout_width="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginVertical="8dp"
                    android:layout_marginHorizontal="12dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="30dp"
                    app:cardBackgroundColor="#badc57"
                    >
                    <TextView
                        android:id="@+id/guvatext"
                        android:layout_width="150dp"
                        android:layout_height="28dp"
                        android:layout_marginLeft="200dp"
                        android:layout_marginTop="100dp"
                        android:fontFamily="@font/archivo_black"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:text="0KG" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="163dp"
                        android:layout_height="169dp"
                        android:src="@drawable/guva" />

                    <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                        android:id="@+id/guvacount"
                        android:layout_width="102dp"
                        android:layout_height="31dp"
                        android:layout_marginHorizontal="225dp"
                        android:layout_marginTop="150dp"/>

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_marginVertical="190dp"
                        android:textSize="20sp"
                        android:fontFamily="@font/archivo_black"
                        android:layout_marginHorizontal="30dp"
                        android:text="Guava (1KG)\n         ₹30" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginVertical="8dp"
                    android:layout_marginHorizontal="12dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="30dp"
                    app:cardBackgroundColor="#EA425C"
                    >
                    <TextView
                        android:id="@+id/melontext"
                        android:layout_width="150dp"
                        android:layout_height="28dp"
                        android:layout_marginLeft="200dp"
                        android:layout_marginTop="110dp"
                        android:fontFamily="@font/archivo_black"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:text="0KG"
                        />
                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="185dp"
                        android:layout_height="169dp"
                        android:src="@drawable/melon"
                        />
                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_marginVertical="190dp"
                        android:textSize="20sp"
                        android:fontFamily="@font/archivo_black"
                        android:layout_marginHorizontal="20dp"
                        android:text="WaterMelon(1KG)\n               ₹90" />
                    <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                        android:id="@+id/meloncount"
                        android:layout_width="102dp"
                        android:layout_height="31dp"
                        android:layout_marginHorizontal="220dp"
                        android:layout_marginTop="150dp"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginVertical="8dp"
                    android:layout_marginHorizontal="12dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="30dp"
                    app:cardBackgroundColor="#ff8b3d"
                    >
                    <TextView
                        android:id="@+id/orangetext"
                        android:layout_width="150dp"
                        android:layout_height="28dp"
                        android:layout_marginLeft="200dp"
                        android:layout_marginTop="120dp"
                        android:fontFamily="@font/archivo_black"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:text="0KG"
                        />
                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="185dp"
                        android:layout_height="169dp"
                        android:src="@drawable/orange" />
                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_marginVertical="190dp"
                        android:textSize="20sp"
                        android:fontFamily="@font/archivo_black"
                        android:layout_marginHorizontal="30dp"
                        android:text="Orange (1KG)\n         ₹70" />
                    <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                        android:id="@+id/orangecount"
                        android:layout_width="102dp"
                        android:layout_height="31dp"
                        android:layout_marginHorizontal="220dp"
                        android:layout_marginTop="170dp" />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginVertical="8dp"
                    android:layout_marginHorizontal="12dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="30dp"
                    app:cardBackgroundColor="#E5B143"
                    >
                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="185dp"
                        android:layout_height="169dp"
                        android:layout_weight="2"
                        android:src="@drawable/pineapple22" />
                    <TextView
                        android:id="@+id/pinetext"
                        android:layout_width="150dp"
                        android:layout_height="28dp"
                        android:layout_marginLeft="200dp"
                        android:layout_marginTop="120dp"
                        android:fontFamily="@font/archivo_black"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:text="0KG"></TextView>
                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_marginVertical="190dp"
                        android:textSize="20sp"
                        android:fontFamily="@font/archivo_black"
                        android:layout_marginHorizontal="30dp"
                        android:text="Pineapple(1KG)\n         ₹110" />
                    <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                        android:id="@+id/pinecount"
                        android:layout_width="102dp"
                        android:layout_height="31dp"
                        android:layout_marginHorizontal="220dp"
                        android:layout_marginTop="170dp" />
                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/ok"
                    android:layout_width="147dp"
                    android:layout_height="53dp"
                    android:layout_marginHorizontal="110dp"
                    android:layout_marginBottom="60dp"
                    android:background="@drawable/circular_button"
                    android:text="ADD TO CART" />
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>